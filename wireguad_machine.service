[Unit]
Description=Token Wireguard Server
After=network.target[Service]

[Service]
Type=forking
PIDFile=<PATH TO PROJECT>/service.pid
Type=simple
WorkingDirectory=<PATH TO PROJECT>/wireguard_machine
ExecStart=<PATH TO PROJECT>/wireguard_machine/.venv/bin/uvicorn main:app --host 0.0.0.0 --port 8080
Restart=always[Install]

[Install]
WantedBy=multi-user.target